<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-bold text-3xl">Award Assignment Details</h1>
    <div class="my-4">
      <p><strong>Member:</strong> <%= @account_award.account.full_name %></p>
      <p><strong>Award:</strong> <%= @account_award.award.name %></p>
    </div>

    <%= link_to "Edit this award assignment", edit_account_award_path(@account_award), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this award assignment", account_award_path(@account_award), method: :delete, data: { confirm: "Are you sure?" }, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
    </div>
    <%= link_to "Back to award assignments", account_awards_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
